<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
    <persistence-unit name="projet">
        <properties>
            <property name="hibernate.dialect" value="org.hibernate.dialect.MariaDBDialect"/>
            <property name="hibernate.connection.url" value="jdbc:mariadb://${DB_ADDR}:${DB_PORT}/projet"/>
            <property name="hibernate.connection.username" value="${DB_USER}"/>
            <property name="hibernate.connection.password" value="${DB_PASS}"/>
        </properties>
    </persistence-unit>
</persistence>
